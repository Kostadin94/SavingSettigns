<Window x:Class="SavingSettigns.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SavingSettigns"
        mc:Ignorable="d"
         Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.ColumnSpan="2" Width="200" Grid.Row="1" Header="Username">            
            <TextBox Name="tbUsername"  />
        </GroupBox>
        <GroupBox Grid.ColumnSpan="2" Width="200" Grid.Row="2" Header="Password">
        <PasswordBox Name="tbPassword" />
        </GroupBox>
            <Button Name="Register" Width="100" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="1" Click="Register_Click">Register</Button>
        <Button Name="Login" Width="100" Grid.Row="3"  HorizontalAlignment="Right" Click="Login_Click" >Login</Button>
    </Grid>
</Window>
